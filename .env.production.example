# Production defaults for Coolify deployments
# Replace placeholder values with the real secrets/domains before deploying.

# === Django core ===
DJANGO_SECRET_KEY=replace-me
DJANGO_ALLOWED_HOSTS=api.example.com
DJANGO_CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://app.example.com,https://admin.example.com
DJANGO_TIME_ZONE=Africa/Accra
DJANGO_CHANNEL_LAYER=redis

# === Authentication & member defaults ===
AUTH_ACCESS_TOKEN_MINUTES=15
AUTH_REFRESH_TOKEN_DAYS=14
AUTH_OTP_TTL_MINUTES=5
AUTH_OTP_MAX_ATTEMPTS=5
DEFAULT_KYC_STATUS=pending

# === Database ===
POSTGRES_DB=sankofa
POSTGRES_USER=sankofa
POSTGRES_PASSWORD=change-me
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# === Redis / Channels / Celery ===
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=super-secret  # Uncomment when Redis auth is enabled.
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# === Document storage (switch backend to s3 when wiring up object storage) ===
IDENTIFICATION_STORAGE_BACKEND=local
# IDENTIFICATION_STORAGE_BUCKET=sankofa-identification
# IDENTIFICATION_STORAGE_ACCESS_KEY=
# IDENTIFICATION_STORAGE_SECRET_KEY=
# IDENTIFICATION_STORAGE_ENDPOINT=https://s3.example.com
# IDENTIFICATION_STORAGE_REGION=eu-west-1
# IDENTIFICATION_STORAGE_DEFAULT_ACL=private
# IDENTIFICATION_STORAGE_CUSTOM_DOMAIN=cdn.example.com
IDENTIFICATION_MAX_IMAGE_MB=5

# === Email ===
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DJANGO_DEFAULT_FROM_EMAIL="Sankofa Support <support@example.com>"
DJANGO_SERVER_EMAIL=ops@example.com
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=replace-me
EMAIL_USE_TLS=true
# EMAIL_USE_SSL=false
EMAIL_TIMEOUT=30

# === Frontend build-time variables (consumed by both web apps) ===
VITE_API_BASE_URL=https://api.example.com
